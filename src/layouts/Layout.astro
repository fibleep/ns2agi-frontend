---
import Navbar from "../components/Navbar.astro";

export interface Props {
    title?: string;
    backgroundImageUrl?: string;
}

const { title = "North Star", backgroundImageUrl } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>

        <link rel="preload" as="image" href="/nslogo.svg" />

        <meta
            http-equiv="Cache-Control"
            content="public, max-age=31536000, immutable"
        />

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Amaranth:ital@1&family=Cormorant:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap"
            rel="stylesheet"
        />

        <style
            define:vars={{
                bgImageUrl: backgroundImageUrl
                    ? `url(${backgroundImageUrl})`
                    : "none",
            }}
        >
            html,
            body {
                margin: 0;
                width: 100%;
                min-height: 100%;
                font-family: "Inter", sans-serif;
                scroll-behavior: smooth;
                background-color: #000;
                color: #fff;
                -webkit-font-smoothing: antialiased;
                -moz-osx-font-smoothing: grayscale;
            }

            .layout-container {
                min-height: 100vh;
                display: flex;
                flex-direction: column;
                background-image: var(--bgImageUrl);
                background-size: cover;
                background-position: center;
                background-attachment: fixed;
            }

            .main-content {
                flex-grow: 1;
            }

            /* Darken background images on mobile for better text contrast */
            @media (max-width: 768px) {
                .mobile-bg-darken {
                    background-color: rgba(0, 0, 0, 0.85) !important;
                }
            }
        </style>
    </head>
    <body
        class="bg-background text-foreground antialiased selection:bg-white/20"
    >
        <div class="layout-container relative">
            <Navbar />
            {
                backgroundImageUrl && (
                    <div class="fixed inset-0 bg-black/80 backdrop-blur-[2px] pointer-events-none -z-10 mobile-bg-darken" />
                )
            }

            <div
                class="fixed inset-0 bg-[radial-gradient(circle_at_top,_var(--tw-gradient-stops))] from-white/5 via-transparent to-transparent pointer-events-none -z-20"
            >
            </div>

            <div class="main-content relative z-10">
                <slot />
            </div>
        </div>
    </body>
</html>
