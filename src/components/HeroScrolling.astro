---
// Hero section with scrolling background
import { GlowingCard } from "./GlowingCard";
import { SplineScene } from "./ui/splite";
---

<section
    class="relative w-full min-h-screen bg-black text-foreground pt-24 pb-12 px-4 md:p-6 lg:p-8 flex flex-col justify-center"
>
    <div
        class="max-w-7xl mx-auto w-full flex flex-col md:grid md:grid-cols-3 md:grid-rows-2 gap-6 md:min-h-[800px]"
    >
        <!-- Core Card (Main) -->
        <GlowingCard
            client:load
            className="md:col-span-2 md:row-span-2 h-[500px] md:h-auto"
        >
            <!-- Background -->
            <div class="absolute inset-0 overflow-hidden">
                <div class="flex flex-col w-full animate-scroll">
                    <img
                        src="/background.png"
                        alt="Stars"
                        class="w-full h-auto object-cover opacity-40 shrink-0"
                    />
                    <img
                        src="/background.png"
                        alt="Stars"
                        class="w-full h-auto object-cover opacity-40 shrink-0"
                    />
                </div>
                <div
                    class="absolute inset-0 bg-gradient-to-t from-black via-black/40 to-transparent"
                >
                </div>
            </div>

            <style>
                @keyframes scroll {
                    0% {
                        transform: translateY(0);
                    }
                    100% {
                        transform: translateY(-50%);
                    }
                }
                .animate-scroll {
                    animation: scroll 60s linear infinite;
                }
            </style>

            <!-- Content -->
            <div
                class="absolute inset-0 z-10 flex flex-col justify-end gap-6 p-6 md:p-10"
            >
                <h1
                    class="text-5xl md:text-6xl lg:text-7xl font-bold tracking-tighter text-white leading-[0.9]"
                >
                    Build it <br />
                    <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-white to-white/50"
                        >together.</span
                    >
                </h1>

                <p
                    class="text-lg md:text-xl text-zinc-300 max-w-xl leading-relaxed"
                >
                    Hackathons, events and a community to push the ecosystem
                    forward
                </p>
            </div>
        </GlowingCard>

        <!-- Kids Card -->
        <a
            href="/kids"
            class="group relative w-full h-[300px] md:h-auto md:col-span-1 md:row-span-1 block"
        >
            <GlowingCard client:load className="h-full">
                <!-- Background -->
                <div class="absolute inset-0 overflow-hidden">
                    <img
                        src="/nskids-banner.png"
                        alt="North Star Kids"
                        class="w-full h-full object-cover opacity-30"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-black via-black/60 to-transparent"
                    >
                    </div>
                </div>

                <!-- Content -->
                <div
                    class="absolute inset-0 flex flex-col justify-end p-6 md:p-8"
                >
                    <div>
                        <div class="mb-4 flex items-center gap-3">
                            <img
                                src="/nskids.png"
                                alt="North Star Kids"
                                class="h-16 md:h-20 w-auto object-contain"
                            />
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-white/60 group-hover:text-white group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-all" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M7 7h10v10"/><path d="M7 17 17 7"/></svg>
                        </div>
                        <h2
                            class="text-2xl font-bold text-white mb-2 leading-tight"
                        >
                            Education in the age of AI
                        </h2>
                        <p class="text-zinc-400 text-sm">
                            Building the North Star of tomorrow
                        </p>
                    </div>

                </div>
            </GlowingCard>
        </a>

        <!-- Robotics Card -->
        <a
            href="/robotics"
            class="group relative w-full h-[300px] md:h-auto md:col-span-1 md:row-span-1 block"
        >
            <GlowingCard client:load className="h-full">
                <!-- Background - 3D Robot -->
                <div class="absolute inset-0 overflow-hidden">
                    <SplineScene
                        client:load
                        scene="https://prod.spline.design/kZDDjO5HuC9GJUM2/scene.splinecode"
                        className="w-full h-full opacity-60"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-black via-black/60 to-transparent pointer-events-none"
                    >
                    </div>
                </div>

                <!-- Content -->
                <div
                    class="absolute inset-0 flex flex-col justify-end p-6 md:p-8 pointer-events-none"
                >
                    <div>
                        <div class="mb-4 flex items-center gap-3">
                            <img
                                src="/nsrobotics.png"
                                alt="North Star Robotics"
                                class="h-12 md:h-16 w-auto object-contain brightness-0 invert"
                            />
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-white/60 group-hover:text-white group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-all" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M7 7h10v10"/><path d="M7 17 17 7"/></svg>
                        </div>
                        <h2
                            class="text-2xl font-bold text-white mb-2 leading-tight"
                        >
                            The future won't wait
                        </h2>
                        <p class="text-zinc-400 text-sm">
                            Hardware for all
                        </p>
                    </div>

                </div>
            </GlowingCard>
        </a>
    </div>

    <div class="max-w-7xl mx-auto w-full mt-8">
        <div class="flex flex-wrap items-center justify-center gap-3 md:gap-4">
            <a
                href="https://www.linkedin.com/company/north-star-agi"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-4 py-2 rounded-full border border-white/15 text-sm text-zinc-300 hover:text-white hover:border-white/40 transition-colors"
            >
                LinkedIn
            </a>
            <a
                href="https://www.instagram.com/northstaragi/"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-4 py-2 rounded-full border border-white/15 text-sm text-zinc-300 hover:text-white hover:border-white/40 transition-colors"
            >
                Instagram
            </a>
            <a
                href="https://x.com/ns2agi"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-4 py-2 rounded-full border border-white/15 text-sm text-zinc-300 hover:text-white hover:border-white/40 transition-colors"
            >
                X
            </a>
        </div>
    </div>
</section>
