---
// Hero section with scrolling background
---

<section id="hero-section" class="relative min-h-screen overflow-hidden bg-black transition-colors duration-500">
    <!-- Scrolling background - right side on desktop, full on mobile -->
    <div id="background-images" class="absolute inset-0 md:left-1/2 overflow-hidden transition-opacity duration-500">
        <div class="scrolling-banner-fullscreen">
            <img src="/background.png" alt="Events Collage" class="w-full h-auto" />
            <img src="/background.png" alt="Events Collage" class="w-full h-auto" />
        </div>
    </div>

    <!-- Video background for kids (hidden by default) - fullscreen -->
    <div id="background-video" class="absolute inset-0 overflow-hidden hidden transition-opacity duration-500">
        <video
            id="kids-video"
            class="w-full h-full object-cover"
            autoplay
            muted
            loop
            playsinline
        >
            <source src="/kidsaicoding.mp4" type="video/mp4" />
        </video>
    </div>

    <!-- Static image background for robotics (hidden by default) -->
    <div id="background-robotics" class="absolute inset-0 md:left-1/2 overflow-hidden hidden transition-opacity duration-500">
        <img src="/nsrobotics_flyer.png" alt="North Star Robotics" class="w-full h-full object-cover" />
    </div>

    <!-- Left to right gradient overlay for unified look -->
    <div id="gradient-overlay" class="absolute inset-0 bg-gradient-left-right pointer-events-none transition-opacity duration-500"></div>

    <!-- Hero content - left side on desktop, centered on mobile -->
    <div id="hero-content" class="relative z-10 min-h-screen flex items-center justify-center md:justify-start">
        <div class="text-center md:text-left space-y-8 px-4 md:px-12 md:w-1/2 relative">
            <!-- Brand toggles -->
            <div class="flex justify-center md:justify-start mb-8">
                <div id="toggle-container" class="flex gap-0 bg-white/5 backdrop-blur-sm rounded-full p-1 border border-white/10 transition-all duration-300">
                    <button data-brand="northstar" class="brand-toggle active relative px-6 py-2.5 text-sm font-medium text-white transition-all duration-300 rounded-full">
                        <span class="relative z-10">Core</span>
                    </button>
                    <button data-brand="kids" class="brand-toggle relative px-6 py-2.5 text-sm font-medium text-white/60 transition-all duration-300 rounded-full">
                        <span class="relative z-10">Kids</span>
                    </button>
                    <button data-brand="robotics" class="brand-toggle relative px-6 py-2.5 text-sm font-medium text-white/60 transition-all duration-300 rounded-full">
                        <span class="relative z-10">Robotics</span>
                    </button>
                </div>
            </div>

            <div class="relative">
                <!-- Logo container with fixed height to prevent stutters -->
                <div class="h-32 md:h-44 mb-6 flex items-center justify-center md:justify-start">
                    <!-- Default North Star with icon + text -->
                    <div id="default-branding" class="flex items-center gap-4 transition-opacity duration-300">
                        <img src="/rmshine.png" alt="North Star" class="w-12 h-12 md:w-16 md:h-16 object-contain" />
                        <h1 class="text-4xl md:text-6xl font-bold text-white whitespace-nowrap">
                            North Star
                        </h1>
                    </div>

                    <!-- Full logo branding (hidden by default) -->
                    <div id="full-logo-branding" class="hidden transition-opacity duration-300">
                        <img id="brand-full-logo" src="" alt="" class="h-32 md:h-44 object-contain" />
                    </div>
                </div>

                <p id="brand-tagline" class="text-lg md:text-xl text-white/90 max-w-2xl transition-all duration-300">
                AI & robotics education through hackathons and community events across Belgium
                </p>

                <!-- Social Media Icons -->
                <div class="flex items-center gap-4 justify-center md:justify-start mt-6">
                    <a href="https://www.linkedin.com/company/north-star-agi" target="_blank" rel="noopener noreferrer" class="social-icon text-white hover:text-blue-500 transition-all duration-300 hover:scale-110" aria-label="LinkedIn">
