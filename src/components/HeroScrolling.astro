<style>
    @import url('https://fonts.googleapis.com/css2?family=VT323&display=swap');

    /* Fullscreen scrolling banner animation */
    @keyframes scroll-vertical {
        0% {
            transform: translateY(0);
        }
        100% {
            transform: translateY(-50%);
        }
    }

    .scrolling-banner-fullscreen {
        animation: scroll-vertical 60s linear infinite;
        display: flex;
        flex-direction: column;
        width: 100%;
        will-change: transform;
    }

    /* Left to right gradient - removed for cleaner look */
    .bg-gradient-left-right {
        background: transparent;
    }

    /* Mobile improvements - better contrast */
    @media (max-width: 768px) {
        /* Darken background images for better contrast */
        #background-images img,
        #background-robotics img {
            filter: brightness(0.5);
        }

        /* Keep kids video bright - gradient handles contrast */
        #background-video video {
            filter: none;
        }

        /* Strong text shadows for better readability */
        #hero-content h1,
        #brand-tagline {
            text-shadow: 0 2px 8px rgba(0, 0, 0, 0.9),
                         0 4px 16px rgba(0, 0, 0, 0.7);
        }

        /* Add background to toggle container for better visibility */
        #toggle-container {
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(10px);
        }

        /* Add stylish radial gradient spotlight effect */
        #hero-content > div {
            position: relative;
        }

        #hero-content > div::before {
            content: '';
            position: absolute;
            inset: -4rem;
            background: radial-gradient(circle at center,
                rgba(0, 0, 0, 0.9) 0%,
                rgba(0, 0, 0, 0.75) 20%,
                rgba(0, 0, 0, 0.6) 35%,
                rgba(0, 0, 0, 0.45) 50%,
                rgba(0, 0, 0, 0.3) 65%,
                rgba(0, 0, 0, 0.15) 80%,
                transparent 100%);
            z-index: -1;
            pointer-events: none;
        }

        /* Remove backdrop for robotics and kids modes */
        .robotics-active #hero-content > div::before,
        .kids-active #hero-content > div::before {
            display: none;
        }

        /* Hide background image container completely for robotics on mobile - show only color */
        #hero-section.robotics-active #background-robotics {
            display: none;
        }

        /* Remove brightness filter for robotics */
        #hero-section.robotics-active #background-robotics img {
            filter: none;
        }

        /* Lighter text shadows for robotics (on solid color) */
        #hero-section.robotics-active #hero-content h1,
        #hero-section.robotics-active #brand-tagline {
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        }

        /* Lighter toggle background for robotics */
        #hero-section.robotics-active #toggle-container {
            background: rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(4px);
        }

        /* Stronger text shadows for kids on mobile */
        #hero-section.kids-active #hero-content h1,
        #hero-section.kids-active #brand-tagline {
            text-shadow: 3px 3px 0 #8B5A9C,
                         6px 6px 0 rgba(139, 90, 156, 0.5),
                         0 0 20px rgba(0, 0, 0, 0.4);
        }

        #hero-section.kids-active #brand-tagline {
            -webkit-text-stroke: 1.5px #8B5A9C;
        }

        /* Kids social icons on mobile */
        #hero-section.kids-active .social-icon {
            filter: drop-shadow(2px 2px 0px #8B5A9C) drop-shadow(0 0 4px rgba(0, 0, 0, 0.3));
        }

        /* Robotics social icons on mobile */
        #hero-section.robotics-active .social-icon {
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        }

        /* Remove button shadows and borders on mobile */
        .action-btn {
            box-shadow: none !important;
            border: none !important;
        }

        /* Remove any visible borders from button containers */
        #action-buttons a {
            box-shadow: none !important;
        }
    }

    /* Kids gradient - stronger for better text visibility */
    .bg-gradient-left-right.kids {
        background: linear-gradient(to right,
            rgba(0, 0, 0, 0.3) 0%,
            rgba(0, 0, 0, 0.2) 30%,
            rgba(0, 0, 0, 0.1) 50%,
            transparent 100%);
    }

    /* Robotics gradient - removed */
    .bg-gradient-left-right.robotics {
        background: transparent;
    }

    /* Mobile: use stronger gradient for kids */
    @media (max-width: 768px) {
        .bg-gradient-left-right {
            background: transparent;
        }

        .bg-gradient-left-right.kids {
            background: linear-gradient(to right,
                rgba(0, 0, 0, 0.4) 0%,
                rgba(0, 0, 0, 0.25) 40%,
                rgba(0, 0, 0, 0.1) 60%,
                transparent 100%);
        }

        .bg-gradient-left-right.robotics {
            background: transparent;
        }
    }

    /* Kids button styling - using nskids.png colors with better contrast */
    #action-buttons.kids .action-btn-primary {
        background: #FDD835;
        color: #8B5A9C;
        border: none;
        font-weight: 700;
    }

    #action-buttons.kids .action-btn-primary:hover {
        background: #FECA57;
        transform: scale(1.08);
        box-shadow: none;
    }

    #action-buttons.kids .action-btn-secondary {
        background: rgba(139, 90, 156, 0.8);
        color: #FDD835;
        border: none;
        font-weight: 700;
    }

    #action-buttons.kids .action-btn-secondary:hover {
        background: #8B5A9C;
        color: #FDD835;
        box-shadow: none;
    }

    /* Robotics button styling - matching nsrobotics flyer */
    #action-buttons.robotics .action-btn-primary {
        background: #000000;
        color: #FFA500;
        border: none;
    }

    #action-buttons.robotics .action-btn-primary:hover {
        background: #FFA500;
        color: #000000;
        transform: scale(1.08);
    }

    #action-buttons.robotics .action-btn-secondary {
        background: rgba(0, 0, 0, 0.8);
        color: #FFA500;
        border: none;
    }

    #action-buttons.robotics .action-btn-secondary:hover {
        background: #000000;
        color: #FFA500;
    }

    /* Brand toggle styles */
    .brand-toggle {
        cursor: pointer;
        position: relative;
    }

    .brand-toggle::before {
        content: '';
        position: absolute;
        inset: 0;
        background: white;
        border-radius: 9999px;
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: 0;
    }

    .brand-toggle.active::before {
        opacity: 1;
    }

    .brand-toggle.active {
        color: black;
    }

    .brand-toggle:not(.active):hover {
        color: rgba(255, 255, 255, 0.9);
    }

    .brand-toggle:not(.active):hover::before {
        opacity: 0.1;
    }

    /* Toggle container variants for better contrast */
    #toggle-container.robotics-mode {
        background: rgba(0, 0, 0, 0.2);
        border-color: rgba(0, 0, 0, 0.3);
    }

    #toggle-container.robotics-mode .brand-toggle {
        color: rgba(0, 0, 0, 0.6);
    }

    #toggle-container.robotics-mode .brand-toggle.active {
        color: #FFA500;
    }

    #toggle-container.robotics-mode .brand-toggle::before {
        background: black;
    }

    #toggle-container.robotics-mode .brand-toggle:not(.active):hover {
        color: rgba(0, 0, 0, 0.9);
    }

    #toggle-container.kids-mode {
        background: rgba(139, 90, 156, 0.6);
        border: 2px solid #8B5A9C;
        backdrop-filter: blur(10px);
    }

    #toggle-container.kids-mode .brand-toggle {
        color: rgba(139, 90, 156, 1);
        font-weight: 600;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    }

    #toggle-container.kids-mode .brand-toggle.active {
        color: #8B5A9C;
        font-weight: 700;
    }

    #toggle-container.kids-mode .brand-toggle::before {
        background: #FDD835;
    }

    #toggle-container.kids-mode .brand-toggle:not(.active):hover {
        color: rgba(139, 90, 156, 1);
    }

    /* Robotics text color */
    .robotics-active #brand-tagline {
        color: rgba(0, 0, 0, 0.8) !important;
    }

    /* Kids text color - use gold for better contrast on blue */
    .kids-active #brand-tagline {
        color: #FFD53E !important;
        font-weight: 700;
        text-shadow: 3px 3px 0 #8B5A9C,
                     6px 6px 0 rgba(139, 90, 156, 0.5),
                     0 0 20px rgba(0, 0, 0, 0.3);
        -webkit-text-stroke: 1.5px #8B5A9C;
    }

    /* Kids logo shadow for better contrast */
    .kids-active #brand-full-logo {
        filter: drop-shadow(3px 3px 0px #8B5A9C)
                drop-shadow(6px 6px 0px rgba(139, 90, 156, 0.5))
                drop-shadow(0 0 15px rgba(0, 0, 0, 0.4));
    }

    /* Kids social icons - gold with purple hover */
    .kids-active .social-icon {
        color: #FFD53E;
        filter: drop-shadow(2px 2px 0px #8B5A9C);
    }

    .kids-active .social-icon:hover {
        color: #8B5A9C;
        filter: drop-shadow(2px 2px 0px #FFD53E);
    }

    /* Robotics social icons - orange with black hover */
    .robotics-active .social-icon {
        color: #FFA500;
    }

    .robotics-active .social-icon:hover {
        color: #000000;
    }
</style>

<script>
    const brandData = {
        northstar: {
            title: 'north star',
            tagline: "AI & robotics education through hackathons and community events across Belgium",
            className: '',
            backgroundColor: '#000000',
            useVideo: false,
            useRoboticsImage: false,
            useFullLogo: false,
            fullLogo: ''
        },
        kids: {
            title: 'north star kids',
            tagline: 'Hands-on AI & robotics workshops for schools and youth hackathons',
            className: 'kids',
            backgroundColor: '#84D7FE',
            useVideo: true,
            useRoboticsImage: false,
            useFullLogo: true,
            fullLogo: '/nskids-full-logo-transparent.png',
            fontFamily: 'Comic Sans MS'
        },
        robotics: {
            title: 'north star robotics',
            tagline: 'Robotics hardware distribution and integration services for festivals, events, and businesses',
            className: 'robotics',
            backgroundColor: '#FFA500',
            useVideo: false,
            useRoboticsImage: true,
            useFullLogo: true,
            fullLogo: '/nsrobotics-full-logo.png'
        }
    };

    const brandTagline = document.getElementById('brand-tagline');
    const defaultBranding = document.getElementById('default-branding');
    const fullLogoBranding = document.getElementById('full-logo-branding');
    const brandFullLogo = document.getElementById('brand-full-logo');
    const toggleContainer = document.getElementById('toggle-container');
    const heroSection = document.getElementById('hero-section');
    const heroContent = document.getElementById('hero-content');
    const backgroundImages = document.getElementById('background-images');
    const backgroundVideo = document.getElementById('background-video');
    const backgroundRobotics = document.getElementById('background-robotics');
    const gradientOverlay = document.getElementById('gradient-overlay');
    const actionButtons = document.getElementById('action-buttons');
    const kidsVideo = document.getElementById('kids-video') as HTMLVideoElement;
    const toggleButtons = document.querySelectorAll('.brand-toggle');

    toggleButtons.forEach(button => {
        button.addEventListener('click', () => {
            const brand = button.getAttribute('data-brand') as keyof typeof brandData;
            const data = brandData[brand];

            // Update active state
            toggleButtons.forEach(btn => {
                btn.classList.remove('active');
                btn.classList.remove('text-white');
                btn.classList.add('text-white/60');
            });
            button.classList.add('active');
            button.classList.remove('text-white/60');
            button.classList.add('text-white');

            // Toggle between default branding and full logo with smooth transition
            if (defaultBranding && fullLogoBranding && brandFullLogo) {
                if (data.useFullLogo) {
                    // Fade out default, fade in full logo
                    defaultBranding.style.opacity = '0';
                    setTimeout(() => {
                        defaultBranding.classList.add('hidden');
                        fullLogoBranding.classList.remove('hidden');
                        brandFullLogo.src = data.fullLogo;
                        brandFullLogo.alt = data.title;
                        setTimeout(() => {
                            fullLogoBranding.style.opacity = '1';
                        }, 10);
                    }, 300);
                } else {
                    // Fade out full logo, fade in default
                    fullLogoBranding.style.opacity = '0';
                    setTimeout(() => {
                        fullLogoBranding.classList.add('hidden');
                        defaultBranding.classList.remove('hidden');
                        setTimeout(() => {
                            defaultBranding.style.opacity = '1';
                        }, 10);
                    }, 300);
                }
            }

            // Update tagline
            if (brandTagline) {
                brandTagline.textContent = data.tagline;
            }

            // Update background
            if (heroSection) {
                heroSection.style.backgroundColor = data.backgroundColor;
            }

            // Toggle between video, robotics image, and default images
            if (backgroundImages && backgroundVideo && backgroundRobotics) {
                if (data.useVideo) {
                    // Kids view - use video
                    backgroundImages.classList.add('hidden');
                    backgroundVideo.classList.remove('hidden');
                    backgroundRobotics.classList.add('hidden');
                    if (kidsVideo) {
                        kidsVideo.play();
                    }
                } else if (data.useRoboticsImage) {
                    // Robotics view - use static image
                    backgroundImages.classList.add('hidden');
                    backgroundVideo.classList.add('hidden');
                    backgroundRobotics.classList.remove('hidden');
                    if (kidsVideo) {
                        kidsVideo.pause();
                    }
                } else {
                    // Default view - use scrolling images
                    backgroundImages.classList.remove('hidden');
                    backgroundVideo.classList.add('hidden');
                    backgroundRobotics.classList.add('hidden');
                    if (kidsVideo) {
                        kidsVideo.pause();
                    }
                }
            }

            // Update gradient overlay
            if (gradientOverlay) {
                gradientOverlay.classList.remove('kids', 'robotics');
                if (brand === 'kids') {
                    gradientOverlay.classList.add('kids');
                } else if (brand === 'robotics') {
                    gradientOverlay.classList.add('robotics');
                }
            }

            // Update action buttons styling
            if (actionButtons) {
                actionButtons.classList.remove('kids', 'robotics');
                if (brand === 'kids') {
                    actionButtons.classList.add('kids');
                } else if (brand === 'robotics') {
                    actionButtons.classList.add('robotics');
                }
            }

            // Update hero content for text colors
            if (heroContent) {
                heroContent.classList.remove('robotics-active', 'kids-active');
                if (brand === 'robotics') {
                    heroContent.classList.add('robotics-active');
                } else if (brand === 'kids') {
                    heroContent.classList.add('kids-active');
                }
            }

            // Update hero section for background control
            if (heroSection) {
                heroSection.classList.remove('robotics-active', 'kids-active');
                if (brand === 'robotics') {
                    heroSection.classList.add('robotics-active');
                } else if (brand === 'kids') {
                    heroSection.classList.add('kids-active');
                }
            }

            // Update toggle container styling for contrast
            if (toggleContainer) {
                toggleContainer.classList.remove('robotics-mode', 'kids-mode');
                if (brand === 'robotics') {
                    toggleContainer.classList.add('robotics-mode');
                } else if (brand === 'kids') {
                    toggleContainer.classList.add('kids-mode');
                }
            }
        });
    });
</script>
