---
export interface Event {
  id: string;
  title: string;
  date: string;
  description: string;
  thumbnail: string;
  photos?: string;
  status: 'completed' | 'upcoming' | 'coming-soon';
  gallery?: string[];
}

export interface Props {
  title?: string;
  subtitle?: string;
  events: Event[];
  showHeader?: boolean;
  compact?: boolean;
  limit?: number;
  showSeeMore?: boolean;
}

const { 
  title = "Our Accomplishments", 
  events = [],
  showHeader = true,
  compact = false,
  limit,
  showSeeMore = false
} = Astro.props;


const defaultEvents: Event[] = [
