---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blogs');
const POSTS_PER_PAGE = 6;
const currentPage = 1; // Static site: render the first page
const totalPages = Math.ceil(posts.length / POSTS_PER_PAGE);
const paginatedPosts = posts.slice((currentPage - 1) * POSTS_PER_PAGE, currentPage * POSTS_PER_PAGE);
---

<html lang="en">
<head>
	<title>Blog Posts</title>
	<style>
		body {
			background: #0b0f19;
			color: white;
			font-family: 'Inter', sans-serif;
		}
		.container {
			max-width: 900px;
			margin: 40px auto;
			padding: 20px;
		}
		.grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
			gap: 20px;
		}
		.card {
			background: #121826;
			border-radius: 10px;
			padding: 15px;
			transition: transform 0.3s ease-in-out;
			text-decoration: none;
			color: white;
		}
		.card:hover {
			transform: scale(1.05);
		}
		.thumbnail {
			width: 100%;
			height: 180px;
			object-fit: cover;
			border-radius: 8px;
		}
		.title {
			font-size: 18px;
			margin-top: 10px;
			font-weight: bold;
		}
		.arrow {
			display: inline-block;
			margin-top: 8px;
			font-size: 14px;
			color: #8ab4f8;
		}
		.pagination {
			display: flex;
			justify-content: center;
			margin-top: 20px;
		}
		.page-link {
			color: #ddd;
			padding: 10px;
			text-decoration: none;
			margin: 0 5px;
			border-radius: 5px;
		}
	</style>
</head>
<body>
<div class="container">
	<h1>Blog Posts</h1>
	<div class="grid">
		{paginatedPosts.map((post) => (
			<a href={`/blogs/${post.data.slug}`} class="card">
				<img src={post.data.thumbnail} alt={post.data.title} class="thumbnail" />
				<h2 class="title">{post.data.title}</h2>
				<span class="arrow">Read More -></span>
			</a>
		))}
	</div>
	<div class="pagination">
		{Array.from({ length: totalPages }).map((_, i) => (
			<a href={`/blogs?page=${i + 1}`} class="page-link">{i + 1}</a>
		))}
	</div>
</div>
</body>
</html>
