        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 182, 54, 0.2), transparent);
        transition: left 0.5s ease;
    }

    .robotics-card:hover::before {
        left: 100%;
    }

    .robotics-card:hover {
        background: rgba(0, 0, 0, 0.95);
        border-color: #FFB636;
        box-shadow:
            0 0 20px rgba(255, 182, 54, 0.3),
            inset 0 0 20px rgba(255, 182, 54, 0.1);
        transform: translateY(-4px);
    }

    /* Robotics social icons hover effects */
    .robotics-social-icon {
        filter: drop-shadow(0 0 8px rgba(255, 182, 54, 0.5));
    }

    .robotics-social-icon:hover {
        filter: drop-shadow(0 0 12px rgba(255, 182, 54, 0.8));
        color: #FFC850 !important;
    }

    /* Smooth section transitions */
    @keyframes float-in {
        from {
            opacity: 0;
            transform: translateY(40px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .kids-section,
    .robotics-section {
        animation: float-in 0.8s ease-out;
    }

    /* Responsive text sizing */
    @media (max-width: 768px) {
        .kids-card,
        .robotics-card {
            padding: 1.5rem;
        }

        .kids-card {
            border-width: 3px;
        }

        .kids-card:hover {
            border-width: 4px;
        }
    }

    /* Logo animations */
    @keyframes float {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    @keyframes pulse-glow-anim {
        0%, 100% {
            filter: drop-shadow(0 0 20px rgba(255, 182, 54, 0.6))
                    drop-shadow(0 0 40px rgba(255, 182, 54, 0.4));
        }
        50% {
            filter: drop-shadow(0 0 30px rgba(255, 182, 54, 0.8))
                    drop-shadow(0 0 60px rgba(255, 182, 54, 0.6));
        }
    }

    .animate-float {
        animation: float 4s ease-in-out infinite;
    }

    .animate-pulse-glow {
        animation: pulse-glow-anim 2s ease-in-out infinite;
    }
