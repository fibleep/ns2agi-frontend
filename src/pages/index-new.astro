        background: #000000;
        position: relative;
    }

    .robotics-title {
        text-shadow:
            0 0 10px #FFB636,
            0 0 20px #FFB636,
            0 0 30px #FFB636;
        letter-spacing: 0.1em;
    }

    .robotics-card {
        background: rgba(0, 0, 0, 0.8);
        border: 2px solid #FFB636;
        border-radius: 8px;
        padding: 2rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .robotics-card::before {
