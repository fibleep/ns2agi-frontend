---
import Layout from "../layouts/Layout.astro";
---

<Layout title="North Star Kids | Education for the Future">
    <main class="relative min-h-screen pt-24 pb-24">
        <!-- Hero -->
        <section class="container mx-auto px-6 mb-16">
            <div class="max-w-4xl mx-auto text-center">
                <img
                    src="/nskids-full-logo-transparent.png"
                    alt="North Star Kids"
                    class="h-32 md:h-40 w-auto mx-auto mb-8"
                />
                <h1 class="text-4xl md:text-6xl font-bold text-white tracking-tight mb-6">
                    Education in the age of AI
                </h1>
                <p class="text-xl text-zinc-400 max-w-2xl mx-auto">
                    Hackathons, workshops, and school programs. Teaching kids to build with code and AI.
                </p>
            </div>
        </section>

        <!-- Banner -->
        <section class="container mx-auto px-6 mb-24">
            <div class="max-w-5xl mx-auto">
                <video
                    src="/kidsaicoding.mp4"
                    controls
                    playsinline
                    class="w-full h-auto rounded-2xl border border-white/10"
                ></video>
            </div>
        </section>

        <!-- Partner Form -->
        <section class="container mx-auto px-6">
            <div class="max-w-3xl mx-auto">
                <p class="text-2xl md:text-3xl font-medium text-white mb-8 text-center">
                    Bring NS Kids to your school
                </p>
                <div class="rounded-2xl bg-zinc-900/30 overflow-hidden">
                    <iframe
                        src="https://beaded-pineapple-898.notion.site/ebd/274d61b47ae280be826fcc817dd3af2c"
                        width="100%"
                        height="700"
                        frameborder="0"
                        allowfullscreen
                        class="w-full"
                        title="Partnership Form"
                    ></iframe>
                </div>
            </div>
        </section>
    </main>
</Layout>
