---
import Layout from "../layouts/Layout.astro";
---

<Layout title="North Star Robotics | The Future Won't Wait">
    <main class="relative min-h-screen pt-24 pb-24">
        <!-- Hero -->
        <section class="container mx-auto px-6 mb-16">
            <div class="max-w-4xl mx-auto text-center">
                <img
                    src="/nsrobotics-full-logo.png"
                    alt="North Star Robotics"
                    class="h-32 md:h-40 w-auto mx-auto mb-8 brightness-0 invert"
                />
                <h1 class="text-4xl md:text-6xl font-bold text-white tracking-tight mb-6">
                    The future won't wait
                </h1>
                <p class="text-xl text-zinc-400 max-w-2xl mx-auto">
                    The grand push for robots in your garage. Building local expertise through events, coworkings, and hands-on builds.
                </p>
            </div>
        </section>

        <!-- Banner -->
        <section class="container mx-auto px-6 mb-24">
            <div class="max-w-5xl mx-auto">
                <img
                    src="/nsrobotics-banner.png"
                    alt="North Star Robotics"
                    class="w-full h-auto rounded-2xl border border-white/10"
                />
            </div>
        </section>

        <!-- Events -->
        <section class="container mx-auto px-6 mb-24">
            <div class="max-w-4xl mx-auto">
                <p class="text-sm font-medium text-zinc-500 uppercase tracking-wider mb-8 text-center">
                    Where we've been
                </p>
                <div class="flex flex-wrap justify-center gap-3">
                    <span class="px-4 py-2 rounded-full bg-zinc-900/50 border border-zinc-800 text-zinc-300 text-sm">Future in Bloom</span>
                    <span class="px-4 py-2 rounded-full bg-zinc-900/50 border border-zinc-800 text-zinc-300 text-sm">Tectonic</span>
                    <span class="px-4 py-2 rounded-full bg-zinc-900/50 border border-zinc-800 text-zinc-300 text-sm">BruCON</span>
                    <span class="px-4 py-2 rounded-full bg-zinc-900/50 border border-zinc-800 text-zinc-300 text-sm">Odoo Experience</span>
                    <span class="px-4 py-2 rounded-full bg-zinc-900/50 border border-zinc-800 text-zinc-300 text-sm">Museum Nacht</span>
                </div>
            </div>
        </section>

        <!-- Partner Form -->
        <section class="container mx-auto px-6">
            <div class="max-w-3xl mx-auto">
                <p class="text-2xl md:text-3xl font-medium text-white mb-8 text-center">
                    Work with us
                </p>
                <div class="rounded-2xl bg-zinc-900/30 overflow-hidden">
                    <iframe
                        src="https://beaded-pineapple-898.notion.site/ebd/274d61b47ae280be826fcc817dd3af2c"
                        width="100%"
                        height="700"
                        frameborder="0"
                        allowfullscreen
                        class="w-full"
                        title="Partnership Form"
                    ></iframe>
                </div>
            </div>
        </section>
    </main>
</Layout>
