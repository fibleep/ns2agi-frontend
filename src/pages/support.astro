---
import Layout from '../layouts/Layout.astro';
import { ArrowRight, Mail } from 'lucide-react';
---

<Layout title="Support | North Star">
    <main class="relative min-h-screen pt-32 pb-24">
        <!-- Hero -->
        <section class="container mx-auto px-6 mb-32">
            <div class="max-w-3xl mx-auto text-center">
                <h1 class="text-4xl md:text-6xl font-semibold mb-8 text-white tracking-tight leading-[1.1]">
                    Support Our Mission
                </h1>
                <p class="text-lg md:text-xl text-zinc-500 max-w-xl mx-auto leading-relaxed">
                    Help us build Europe's AI future, one community event at a time.
                </p>
            </div>
        </section>

        <!-- CTA -->
        <section class="container mx-auto px-6">
            <div class="max-w-2xl mx-auto">
                <div class="rounded-2xl bg-zinc-900/30 p-12 text-center">
                    <h2 class="text-2xl font-medium text-white mb-4 tracking-tight">
                        Ready to Support Our Vision?
                    </h2>
                    <p class="text-zinc-500 mb-10 leading-relaxed">
                        Whether you want to sponsor an event, provide a venue, collaborate on an initiative, or explore other ways to support our mission - let's talk.
                    </p>
                    <a
                        href="mailto:filip@ns2agi.com?subject=Support%20North%20Star%20AGI"
                        class="inline-flex items-center gap-2 text-sm font-medium text-black bg-white hover:bg-zinc-200 px-6 py-3 rounded-lg transition-colors"
                    >
                        <Mail className="w-4 h-4" />
                        Get in Touch
                    </a>
                    <p class="text-zinc-600 text-sm mt-6">filip@ns2agi.com</p>
                </div>
            </div>
        </section>
    </main>
</Layout>
