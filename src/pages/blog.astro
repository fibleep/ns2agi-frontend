---
import Layout from '../layouts/Layout.astro';
import { ArrowRight } from 'lucide-react';

const blogPosts = [
  {
    id: 'cost-of-connection',
    title: 'The Cost of Connection',
    date: 'December 31, 2025',
    excerpt: 'Brain drain breaks the chain of people lifting other people up. How do we ignite Belgium\'s tech ecosystem and create the collisions that compound?',
    author: 'Filip Nowak',
    thumbnail: 'https://miro.medium.com/v2/resize:fit:1400/format:webp/0*BtDdP2mnKTCSqMjN',
    readTime: '7 min read',
    slug: 'cost-of-connection'
  },
];

function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<Layout title="Blog | North Star">
    <main class="relative min-h-screen pt-32 pb-24">
        <!-- Hero -->
        <section class="container mx-auto px-6 mb-32">
            <div class="max-w-3xl mx-auto text-center">
                <h1 class="text-4xl md:text-6xl font-semibold mb-8 text-white tracking-tight leading-[1.1]">
                    Blog
                </h1>
                <p class="text-lg md:text-xl text-zinc-500 max-w-xl mx-auto leading-relaxed">
                    Insights, stories, and lessons from our community.
                </p>
            </div>
        </section>

        <!-- Posts Grid -->
        <section class="container mx-auto px-6 mb-32">
            <div class="max-w-4xl mx-auto">
                <div class="grid md:grid-cols-2 gap-6">
                    {blogPosts.map((post) => (
                        <a href={`/blog/${post.slug}`} class="group rounded-2xl overflow-hidden bg-zinc-900/30 hover:bg-zinc-900/50 transition-all duration-300">
                            <div class="aspect-video bg-zinc-800 overflow-hidden">
                                {post.thumbnail ? (
                                    <img
                                        src={post.thumbnail}
                                        alt={post.title}
                                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                                    />
                                ) : (
                                    <div class="w-full h-full flex items-center justify-center">
                                        <span class="text-zinc-600">No Image</span>
                                    </div>
                                )}
                            </div>
                            <div class="p-6">
                                <div class="flex items-center gap-3 text-xs text-zinc-600 mb-3">
                                    <span>{post.author}</span>
                                    <span>•</span>
                                    <time datetime={post.date}>{formatDate(post.date)}</time>
                                    <span>•</span>
                                    <span>{post.readTime}</span>
                                </div>
                                <h3 class="text-lg font-medium text-white mb-3 group-hover:text-zinc-300 transition-colors">
                                    {post.title}
                                </h3>
                                <p class="text-zinc-500 text-sm leading-relaxed mb-4 line-clamp-2">
                                    {post.excerpt}
                                </p>
                                <div class="flex items-center gap-2 text-sm text-zinc-400 group-hover:text-white transition-colors">
                                    Read more <ArrowRight className="w-4 h-4" />
                                </div>
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
