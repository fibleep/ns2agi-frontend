    <div class="container mx-auto px-4 max-w-7xl">
      <div class="text-center mb-12">
        <div class="mb-8">
          <img
            src="/nslogo.svg"
            alt="North Star"
            class="w-24 h-24 mx-auto object-contain"
          />
        </div>
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-white">
          Paths to North Star
        </h2>
      </div>

      {/* Horizontal Timeline */}
      <HorizontalTimeline client:load events={eventsData} />

      </div>
  </section>

  {/* Etoile CTA */}
  <section class="relative overflow-hidden">
    {/* Gradient that fades from black -> warm -> black */}
    <div class="absolute inset-0 bg-gradient-to-b from-black via-[#1a0f08] to-black"></div>
    {/* Radial glow in center */}
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_50%_40%_at_50%_50%,_rgba(254,119,67,0.12)_0%,_transparent_70%)]"></div>

    <div class="relative block">
      <div class="py-28 md:py-36 px-6 text-center">
