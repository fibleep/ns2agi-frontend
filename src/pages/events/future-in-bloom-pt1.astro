---
import Layout from '../../layouts/Layout.astro';
---

<Layout>
  <!-- Background and styling -->
  <div class="min-h-screen bg-gradient-to-br from-stone-900 via-amber-950 to-stone-900 -mt-20 md:-mt-24 pt-20 md:pt-24">
