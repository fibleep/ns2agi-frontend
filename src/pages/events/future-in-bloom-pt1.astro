    <div class="fixed inset-0 opacity-10 pointer-events-none">
      <div class="absolute top-0 left-0 w-32 h-32 bg-rose-600 rounded-full filter blur-3xl"></div>
      <div class="absolute top-0 right-0 w-32 h-32 bg-amber-600 rounded-full filter blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-32 h-32 bg-orange-600 rounded-full filter blur-3xl"></div>
      <div class="absolute bottom-0 right-0 w-32 h-32 bg-pink-600 rounded-full filter blur-3xl"></div>
    </div>

    <!-- Blog Content -->
    <main class="relative z-10 container mx-auto px-4 py-16 max-w-3xl">

      <!-- Header -->
      <header class="mb-12 text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-amber-100 mb-4" style="font-family: serif;">
          Future in Bloom PT1
