---
import Layout from "../../layouts/Layout.astro";
import EventsTimeline from "../../components/events-timeline";
---

<Layout title="North Star Events | The Timeline">
    <main class="relative min-h-screen pt-32 pb-24">
        <!-- Hero -->
        <section class="container mx-auto px-6 mb-16">
            <div class="max-w-3xl mx-auto text-center">
                <h1 class="text-4xl md:text-6xl font-semibold mb-8 text-white tracking-tight leading-[1.1]">
                    Events
                </h1>
                <p class="text-lg md:text-xl text-zinc-500 max-w-xl mx-auto leading-relaxed">
                    Our history and our future. Join us at our next gathering.
                </p>
            </div>
        </section>

        <!-- Timeline -->
        <section class="container mx-auto px-6">
            <EventsTimeline client:load />
        </section>
    </main>
</Layout>
