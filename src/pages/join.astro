        <section class="container mx-auto px-6 mb-32">
            <div class="max-w-3xl mx-auto">
                <h2 class="text-sm font-medium text-zinc-500 uppercase tracking-wider mb-8 text-center">
                    Or reach out via email
                </h2>
                <div class="rounded-2xl bg-zinc-900/30 p-12 text-center">
                    <a href="mailto:filip@ns2agi.com" class="text-2xl md:text-3xl font-medium text-white hover:text-zinc-300 transition-colors">
                        filip@ns2agi.com
                    </a>
                </div>
