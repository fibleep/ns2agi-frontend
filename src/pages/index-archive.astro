</Layout>

<style>
    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    

    
    @keyframes twinkle {
        0%, 100% { opacity: 0.3; transform: scale(1); }
        50% { opacity: 1; transform: scale(1.2); }
    }
    
    .animate-fade-in { 
        animation: fade-in 1s ease-out forwards; 
    }
    .animate-fade-in-delay-1 { 
        animation: fade-in 1s ease-out 0.3s backwards; 
    }
    .animate-fade-in-delay-2 { 
        animation: fade-in 1s ease-out 0.6s backwards; 
    }
    .animate-fade-in-delay-3 { 
        animation: fade-in 1s ease-out 0.9s backwards; 
    }
    

    .animate-twinkle {
        animation: twinkle 2s infinite;
    }
    
    
    
    .timeline-item {
        position: relative;
        opacity: 0;
        animation: timeline-fade-in 0.8s ease-out forwards;
    }
    
    .timeline-item:nth-child(1) { animation-delay: 0.2s; }
    .timeline-item:nth-child(2) { animation-delay: 0.4s; }
    .timeline-item:nth-child(3) { animation-delay: 0.6s; }
    .timeline-item:nth-child(4) { animation-delay: 0.8s; }
    .timeline-item:nth-child(5) { animation-delay: 1.0s; }
    
    @keyframes timeline-fade-in {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .timeline-content {
        flex: 1;
        max-width: 45%;
    }
    
    .timeline-left {
        text-align: right;
        padding-right: 2rem;
    }
    
    .timeline-right {
        text-align: left;
        padding-left: 2rem;
    }
    
    .timeline-card {
        background: rgba(15, 23, 42, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 1.5rem;
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    
    .timeline-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 2px;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    
    .timeline-item:hover .timeline-card {
        transform: translateY(-4px);
        border-color: rgba(255, 255, 255, 0.3);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }
    
    .timeline-item:hover .timeline-card::before {
        opacity: 1;
    }
    
    .timeline-title {
        color: white;
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        line-height: 1.3;
    }
    
    .timeline-description {
        color: #d1d5db;
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }
    
    
    .path-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }
    
    .events-icon {
        background: linear-gradient(135deg, rgba(59,130,246,0.2), rgba(99,102,241,0.2));
        color: #60a5fa;
        border: 2px solid rgba(59,130,246,0.3);
    }
    
    .robotics-icon {
        background: linear-gradient(135deg, rgba(245,158,11,0.2), rgba(217,119,6,0.2));
        color: #fbbf24;
        border: 2px solid rgba(245,158,11,0.3);
    }
    
    .ai-icon {
        background: linear-gradient(135deg, rgba(16,185,129,0.2), rgba(5,150,105,0.2));
        color: #34d399;
        border: 2px solid rgba(16,185,129,0.3);
    }
    
    
    .path-highlights {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: 1rem;
    }
    
    .highlight {
        background: rgba(255,255,255,0.1);
        color: #e5e7eb;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 500;
        border: 1px solid rgba(255,255,255,0.2);
        transition: all 0.3s ease;
    }
    
    .events-path .highlight:hover {
        background: rgba(59,130,246,0.2);
        border-color: rgba(59,130,246,0.4);
        color: #60a5fa;
    }
    
    .robotics-path .highlight:hover {
        background: rgba(245,158,11,0.2);
        border-color: rgba(245,158,11,0.4);
        color: #fbbf24;
    }
    
    .ai-path .highlight:hover {
        background: rgba(16,185,129,0.2);
        border-color: rgba(16,185,129,0.4);
        color: #34d399;
    }
    
    
    .timeline-dot {
        position: relative;
        width: 24px;
        height: 24px;
        border-radius: 50%;
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10;
        transition: all 0.3s ease;
    }
    
    .dot-inner {
        width: 16px;
        height: 16px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }
    
    .timeline-item:hover .timeline-dot {
        transform: scale(1.4);
    }
    
    .timeline-item:hover .dot-inner {
        transform: scale(1.1);
    }
    
    
    .events-dot {
        background: linear-gradient(135deg, #3b82f6, #1d4ed8);
        box-shadow: 0 0 20px rgba(59, 130, 246, 0.4);
    }
    
    .events-dot .dot-inner {
        background: rgba(96, 165, 250, 0.2);
        color: #60a5fa;
    }
    
    .robotics-dot {
        background: linear-gradient(135deg, #f59e0b, #d97706);
        box-shadow: 0 0 20px rgba(245, 158, 11, 0.4);
    }
    
    .robotics-dot .dot-inner {
        background: rgba(251, 191, 36, 0.2);
        color: #fbbf24;
    }
    
    .ai-dot {
        background: linear-gradient(135deg, #10b981, #059669);
        box-shadow: 0 0 20px rgba(16, 185, 129, 0.4);
    }
    
    .ai-dot .dot-inner {
        background: rgba(52, 211, 153, 0.2);
        color: #34d399;
    }
    
    .dot-glow {
        position: absolute;
        inset: -8px;
        border-radius: 50%;
        opacity: 0.6;
        animation: dot-glow-pulse 2s ease-in-out infinite;
    }
    
    .events-glow {
        background: radial-gradient(circle, rgba(59, 130, 246, 0.4) 0%, transparent 70%);
    }
    
    .robotics-glow {
        background: radial-gradient(circle, rgba(245, 158, 11, 0.4) 0%, transparent 70%);
    }
    
    .ai-glow {
        background: radial-gradient(circle, rgba(16, 185, 129, 0.4) 0%, transparent 70%);
    }
    
    @keyframes dot-glow-pulse {
        0%, 100% { 
            transform: scale(1);
            opacity: 0.4;
        }
        50% { 
            transform: scale(1.3);
            opacity: 0.8;
        }
    }
    
    
    .events-path {
        border-color: rgba(59, 130, 246, 0.3);
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.05), rgba(99, 102, 241, 0.05));
    }
    
    .robotics-path {
        border-color: rgba(245, 158, 11, 0.3);
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.05), rgba(217, 119, 6, 0.05));
    }
    
    .ai-path {
        border-color: rgba(16, 185, 129, 0.3);
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.05), rgba(5, 150, 105, 0.05));
    }
    
    
    .convergence-point {
        margin-top: 3rem;
        padding-top: 2rem;
    }
    
    .convergence-card {
        text-align: center;
        background: linear-gradient(135deg, rgba(15, 23, 42, 0.9), rgba(30, 41, 59, 0.8));
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        padding: 2rem;
        backdrop-filter: blur(20px);
        position: relative;
        overflow: hidden;
    }
    
    .convergence-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent);
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    
    .convergence-card:hover::before {
        opacity: 1;
    }
    
    .convergence-star {
        position: relative;
        display: inline-block;
        margin-bottom: 1rem;
    }
    
    .convergence-glow {
        position: absolute;
        inset: -20px;
        background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 70%);
        border-radius: 50%;
        animation: convergence-pulse 3s ease-in-out infinite;
    }
    
    @keyframes convergence-pulse {
        0%, 100% { 
            transform: scale(1);
            opacity: 0.5;
        }
        50% { 
            transform: scale(1.4);
            opacity: 0.9;
        }
    }
    
    .convergence-title {
        color: white;
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #60a5fa, #34d399, #fbbf24);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    
    .convergence-description {
        color: #d1d5db;
        font-size: 1rem;
        line-height: 1.6;
    }
    
    
    
    
    .milestone {
        position: absolute;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .milestone-1 { top: -120px; left: -60px; }
    .milestone-2 { top: -60px; right: -120px; }
    .milestone-3 { bottom: -60px; right: -120px; }
    .milestone-4 { bottom: -120px; left: -60px; }
    .milestone-5 { top: 50%; left: -160px; transform: translateY(-50%); }
    
    .milestone-dot {
        width: 20px;
        height: 20px;
        border-radius: 50%;
        margin: 0 auto 8px;
        transition: all 0.3s ease;
        box-shadow: 0 0 20px rgba(255,255,255,0.3);
    }
    
    .milestone-dot.completed {
        background: linear-gradient(45deg, #10b981, #059669);
        box-shadow: 0 0 20px rgba(16,185,129,0.5);
    }
    
    .milestone-dot.in-progress {
        background: linear-gradient(45deg, #f59e0b, #d97706);
        box-shadow: 0 0 20px rgba(245,158,11,0.5);
        animation: pulse-glow 2s ease-in-out infinite;
    }
    
    .milestone-dot.pending {
        background: linear-gradient(45deg, #6b7280, #4b5563);
        box-shadow: 0 0 20px rgba(107,114,128,0.3);
    }
    
    .milestone-label {
        font-size: 0.75rem;
        font-weight: 600;
        text-align: center;
        color: rgba(255,255,255,0.8);
        white-space: nowrap;
    }
    
    .milestone:hover .milestone-dot {
        transform: scale(1.3);
        box-shadow: 0 0 30px currentColor;
    }
    
    
    


    body {
        overflow-x: hidden;
    }
    
    
    html {
        scroll-behavior: smooth;
    }
    
    
    .scroll-indicator {
        position: relative;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .scroll-indicator:hover {
        transform: scale(1.1);
    }
    
    .scroll-arrow {
        animation: scroll-bounce 2s ease-in-out infinite;
    }
    
    @keyframes scroll-bounce {
        0%, 100% { 
            transform: translateY(0); 
            opacity: 0.6;
        }
        50% { 
            transform: translateY(8px); 
