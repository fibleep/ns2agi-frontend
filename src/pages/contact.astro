---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact | North Star">
    <main class="relative min-h-screen pt-32 pb-24">
        <!-- Hero -->
        <section class="container mx-auto px-6 mb-16">
            <div class="max-w-3xl mx-auto text-center">
                <h1 class="text-4xl md:text-6xl font-semibold mb-8 text-white tracking-tight leading-[1.1]">
                    Get in Touch
                </h1>
            </div>
        </section>

        <!-- Form -->
        <section class="container mx-auto px-6 mb-32">
            <div class="max-w-3xl mx-auto">
                <div class="rounded-2xl bg-zinc-900/30 overflow-hidden">
                    <iframe
                        src="https://beaded-pineapple-898.notion.site/ebd/274d61b47ae280be826fcc817dd3af2c"
                        width="100%"
                        height="700"
                        frameborder="0"
                        allowfullscreen
                        class="w-full"
                        title="Contact Form"
                    ></iframe>
                </div>
            </div>
        </section>
    </main>
</Layout>
